@import url(http://fonts.googleapis.com/css?family=Merienda)
body
  background: url(../img/degradado.png) rgba(0,0,0,0.1)
  background-repeat: repeat-x

#contenedor
  border: 0px dotted grey
  width: 800px
  margin: auto
  padding: 20px

// INICIALIZANDO FORMATO
p
  margin: 0px
  padding: 0px
  
h3,h4,h5,h6
  @extend p

h1,h2
  @extend p
  margin-top: 10px
  padding-top: 10px

// CABECERA-TEXTO
h1
  font-family: 'Merienda', cursive
  color: white
  text-shadow: 0px 4px 8px rgba(0,0,0,.4)

h2
  font-family: arial
  font-style: italic
  font-weight: normal
  font-size: 14px
  position: relative
  top: 20px
  left: 20px

// CABECERA-LOGO
#logo
  height: 100px
  width: 100px
  background: url(../img/josevicentecarratala2.png)
  background-size: 100%
  float: left
  margin-right: 20px
  margin-bottom: 20px

// MENU
nav
  ul
    list-style-type: none
    @extend p
    li
      float: left
      padding: 4px
      margin: 4px
      border-right: 1px dotted white
      width: 100px
      text-align: center
      transition: all 1s
      &:hover
        background: rgba(255,255,255,.5)
      a
        text-decoration: none
        color: white  

article
  width: 33%
  text-align: justify
  float: left

.contienearticulo
  padding: 10px
  height: 200px
  overflow: hidden

#primerarticulo
  padding-left: 20px

#ultimoarticulo
  padding-right: 0px

footer
  margin-top: 30px
  height: 30px
  text-align: center

.imagendestacado
  width: 100%
  height: 100px
  background: grey
  margin-bottom: 10px
  background-size: 100% 100%

#img1
  background: url(../img/DSC_9140.JPG)
  background-size: 100% 100%

#img2
  background: url(../img/DSC_9180.JPG)
  background-size: 100% 100%

#img3
  background: url(../img/DSC_9253.JPG)
  background-size: 100% 100%

#banner
  width: 100%
  height: 300px
  border: 1px solid black
  background: url(../img/dsc_9153.jpg)
  margin-top: 10px
  margin-bottom: 10px
  box-shadow: 0px 10px 25px rgba(0,0,0,0.4)
  #contienebanner    
    padding: 10px
    background: rgba(255,255,255,0.5)
    p
      font-size: 10px    

#contieneformulario
  width: 100%
  background: white
  padding: 20px
  box-shadow: 0px 10px 25px rgba(0,0,0,0.3)
  form
    width: 50%
    margin: auto
    border: 1px dashed rgba(0,0,0,0.2)
    padding: 10px
    input,textarea,#botonenviar
      width: 95%
      margin-bottom: 10px

