@import url(http://fonts.googleapis.com/css?family=Merienda)
body,
html
  width: 100%
  height: 100%
  margin: 0px
  padding: 0px
  overflow: hidden

h1,
h2,
h3,
h4,
h5,
h6,
p
  padding: 0px
  margin: 0px  

#titulo
  width: 600px
  height: 100px
  height: 100px
  position: absolute

#logo
  height: 100px
  width: 100px
  background: url(../img/josevicentecarratala2.png)
  background-size: 100% 100%
  float: left
  margin-right: 20px
  margin-bottom: 20px

h1
  font-family: 'Merienda', cursive
  color: black
  text-shadow: 0px 4px 8px rgba(0,0,0,.4)

h2
  font-family: arial
  font-style: italic
  font-weight: normal
  font-size: 14px
  position: relative
  top: 0px
  left: 20px
  
nav
  margin-top: 100px
  border: 0px solid black
  width: 95%
  height: 55%
  box-shadow: -25px 0px 50px rgba(0,0,0,0.2) inset
  ul
    list-style-type: none
    margin: 0px
    padding: 0px
    li
      width: 90%
      border-bottom: 1px solid grey
      height: 50px
      padding-top: 20px
      padding-left: 10px
      font-size: 24px
      text-transform: uppercase
      a
        color: black
        text-decoration: none

header
  width: 33%
  height: 100%
  float: left

section
  width: 100%
  height: 100%
  position: relative
  top: 100px

.imagendestacado
  width: 200px
  height: 100px
  background: grey
  float: left
  margin-right: 10px
  margin-top: 10px

#img1
  background: url(../img/DSC_9140.JPG)
  background-size: 100% 100%

#img2
  background: url(../img/DSC_9180.JPG)
  background-size: 100% 100%

#img3
  background: url(../img/DSC_9253.JPG)
  background-size: 100% 100%

#contenedor
  width: 100%
  height: 100%